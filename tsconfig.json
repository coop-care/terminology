{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true  
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}
